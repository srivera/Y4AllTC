<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:gravity="top"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/layoutInicial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:layout_weight="0.10">
        <ImageButton
            android:id="@+id/fabSalir"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/salir"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <View android:id="@+id/rectangle_at_the_top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txtNombreEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado actual"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:orientation="horizontal"
        android:id="@+id/layoutMensaje"
        android:gravity="center_horizontal"
        android:padding="5dp">
        <TextView
            android:id="@+id/txtEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YacarÃ© Technology"
            android:gravity="center"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#AAAAAA"/>

        <ImageView
            android:id="@+id/imagensenal"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:src="@drawable/menuinternet"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layoutDetalle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.63"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/layoutDetalle1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@color/color_light"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/loadingPanel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="50dp"
                        android:paddingBottom="50dp"
                        android:layout_margin="50dp"
                        android:background="@drawable/image_rounded_corner_amet"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <ec.com.yacare.y4all.lib.util.indicator.AVLoadingIndicatorView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/indicator"
                            app:indicatorColor="@color/colorprincipal"
                            app:indicatorName="BallPulseSyncIndicator"
                            style="@style/AVLoadingIndicatorView" />

                        <TextView
                            android:id="@+id/txtConectando"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="conectando un momento por favor"
                            android:textColor="@color/f_gris"
                            android:gravity="center_horizontal"
                            android:textSize="12dp"
                            android:layout_marginTop="9dp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/videoPanel">
                    <TextView
                        android:id="@+id/textoTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textColor="#000000"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />



                    <ImageView
                        android:id="@+id/imagenInicialFoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
                    </RelativeLayout>

                <ImageButton
                    android:id="@+id/fabMic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/micceleste"
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"/>
                <ec.com.yacare.y4all.lib.util.indicator.AVLoadingIndicatorView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/indicatorMic"
                    app:indicatorName="BallScaleMultipleIndicator"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"/> />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/constraintLayout"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:id="@+id/txtMensaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_mensaje"
                        android:text=""
                        android:textColor="#000000"
                        android:gravity="center_horizontal"
                        android:textSize="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        tools:layout_editor_absoluteY="144dp"
                        tools:layout_editor_absoluteX="0dp"
                        android:elevation="1dp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutDetalle2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/principalAlfa"
            android:layout_weight="0.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageButton
                    android:id="@+id/btnMensaje"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/menumensaje"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
                <ImageButton
                    android:id="@+id/btnLuz"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/menuluces"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
                <Button
                    android:id="@+id/fabCerrar"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent"
                    android:text="Cerrar"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:textAllCaps="false"
                    android:background="@drawable/framerojo"/>

                <ImageButton
                    android:id="@+id/fabPuerta"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/menupuerta"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"/>

                <ImageButton
                    android:id="@+id/fabSpeaker"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/menuspeaker"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical|center_horizontal">
                <TextView
                    android:id="@+id/txtAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="audio"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>


                <TextView
                    android:id="@+id/txtVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="video"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:layout_alignBaseline="@+id/txtAudio"
                    android:layout_alignBottom="@+id/txtAudio"
                    android:layout_toRightOf="@+id/txtAudio"
                    android:layout_toEndOf="@+id/txtAudio" />


            </RelativeLayout>

            <LinearLayout android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:paddingTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent">
                <ListView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/respuestasTexto"
                    android:layout_weight="0.6"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <GridLayout
        android:id="@+id/layout_inferior"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/y4home_celeste"
            android:layout_gravity="center_vertical"
            android:id="@+id/logo"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txtCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Copyright YacarÃ© Technology"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/question"
            android:id="@+id/question"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
    </GridLayout>
</LinearLayout>
