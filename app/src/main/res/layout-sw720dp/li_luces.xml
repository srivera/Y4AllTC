<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="#333333"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#333333"
        android:id="@+id/layoutLucesPrincipal"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraintLayout"
            android:background="@drawable/back_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#333333"
            android:layout_marginLeft="10dp"
            android:id="@+id/lucesLayout"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/nombreZona"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text="Z"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_vertical|center_horizontal"/>
                </LinearLayout>
                <ec.com.yacare.y4all.lib.util.ViewCircle
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:layout_width="110dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:id="@+id/circle"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    custom:roadColor="#ffffff"
                    custom:roadStrokeWidth="40"
                    custom:roadInnerCircleColor="#ffffff"
                    custom:roadInnerCircleStrokeWidth="2"
                    custom:roadOuterCircleColor="#ffffff"
                    custom:roadOuterCircleStrokeWidth="2"
                    custom:arcLoadingColor="#ffffff"
                    custom:arcLoadingStrokeWidth="6"
                    custom:arcLoadingDashLength="2"
                    custom:arcLoadingDistanceBetweenDashes="2"
                    custom:arcLoadingStartAngle="270"
                    custom:textColor="#ffffff"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnApagarEncender"
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text="apagar"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical|center_horizontal"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnAzul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsAzul"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnRosado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsRosado"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnNaranja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsNaranja"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnBlanco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsBlanco"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnAqua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsAqua"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnNight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsNigth"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnVerde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsVerde"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnLima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsLima"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnRojo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsRojo"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnAmarillo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsAmarillo"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnMorado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsMorado"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnCalido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MenuButtonsCalido"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/brightness"
                        android:layout_gravity="center_vertical"
                        android:progress="100"
                        android:max="100"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/radio_brillo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFF00"
                            android:text="Brillo"
                            android:textSize="14dp"
                            android:checked="true"/>
                        <TextView android:id="@+id/radio_saturacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:textColor="@color/f_gris"
                            android:textSize="14dp"
                            android:text="SaturaciÃ³n"/>
                        <TextView android:id="@+id/radio_efecto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:text="Efectos"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView android:id="@+id/txtLeyenda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFF00"
                        android:text="El brillo esta disponible en cualquier tipo de foco"
                        android:textSize="10dp"
                        android:checked="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btnPopup"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_overflow"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>