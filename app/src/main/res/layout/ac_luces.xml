<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:gravity="top"
    android:background="#FFFFFF">

<com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        fab:menu_labels_style="@style/MenuLabelsStyle"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:elevation="6dp"
        fab:menu_fab_size="mini"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_backgroundColor="#cc585858"
        fab:menu_openDirection="down"
        fab:menu_colorNormal="@color/colorprincipal"
        fab:menu_colorPressed="#00BCD4"
        fab:menu_colorRipple="#4DD0E1">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnAcerca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_apps"
            fab:fab_size="mini"
            fab:fab_label="Acerca de"
            style="@style/MenuButtonsSmall"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnNuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_nuevo"
            fab:fab_size="mini"
            fab:fab_label="Agregar un equipo"
            style="@style/MenuButtonsSmall"/>


    </com.github.clans.fab.FloatingActionMenu>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:gravity="top"
            android:layout_weight="0.15">

            <View android:id="@+id/rectangle_at_the_top"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/gradient"
                android:visibility="visible"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/logo8"
                android:id="@+id/fotoperfil"/>
            <TextView
                android:id="@+id/txtNombreEquipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Sitios"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_at_the_top"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="buscando ibox..."
                    android:textSize="14dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorprincipal"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true" />


                <ec.com.yacare.y4all.lib.util.indicator.AVLoadingIndicatorView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/indicator"
                    app:indicatorName="BallScaleMultipleIndicator"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_alignParentBottom="true"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="4dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:paddingTop="10dp"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/constraintLayoutTotal"
                android:layout_alignParentBottom="true"
                android:background="@drawable/back_color"/>
            <LinearLayout
                android:id="@+id/filaTotal"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ec.com.yacare.y4all.lib.util.ViewCircle
                        android:layout_width="70dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.65"
                        android:id="@+id/circleTodos"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        custom:roadColor="#000000"
                        custom:roadStrokeWidth="40"
                        custom:roadInnerCircleColor="#000000"
                        custom:roadInnerCircleStrokeWidth="2"
                        custom:roadOuterCircleColor="#000000"
                        custom:roadOuterCircleStrokeWidth="2"
                        custom:arcLoadingColor="#000000"
                        custom:arcLoadingStrokeWidth="8"
                        custom:arcLoadingDashLength="2"
                        custom:arcLoadingDistanceBetweenDashes="2"
                        custom:arcLoadingStartAngle="270"
                        custom:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/nombreZonaT"
                        android:textSize="10dp"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:text="TODAS"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical|center_horizontal"/>
                    <Button
                        android:id="@+id/btnBuscarIbox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.35"
                        android:textSize="10dp"
                        android:text="Buscar iBox"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.24"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/btnAzulT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MenuButtonsAzul"/>
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/btnRosadoT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MenuButtonsRosado"/>
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/btnNaranjaT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MenuButtonsNaranja"/>
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/btnBlancoT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MenuButtonsBlanco"/>
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/btnAquaT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MenuButtonsAqua"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.24"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/btnVerdeT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MenuButtonsVerde"/>
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/btnLimaT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MenuButtonsLima"/>
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/btnRojoT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MenuButtonsRojo"/>
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/btnAmarilloT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MenuButtonsAmarillo"/>
                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/btnMoradoT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MenuButtonsMorado"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.22"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/brightnessT"
                            android:layout_gravity="center_vertical"
                            android:progress="100"
                            android:max="100"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        <RadioGroup
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView android:id="@+id/radio_brilloT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:text="Brillo"
                                android:textSize="10dp"
                                android:checked="true"/>
                            <TextView android:id="@+id/radio_saturacionT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:textColor="@color/f_gris"
                                android:textSize="10dp"
                                android:text="SaturaciÃ³n"/>
                        </RadioGroup>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/txtLeyendaT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="El brillo esta disponible en cualquier tipo de foco"
                            android:textSize="8dp"
                            android:checked="true"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="right|top"
                    android:layout_gravity="top|right"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/btnPopupT"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_overflow"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <ListView
            android:id="@+id/listZonas"
            android:background="#333333"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"/>
    </LinearLayout>

</RelativeLayout>