<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:scrollbars="vertical"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="fill_parent"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:gravity="center_vertical|center_horizontal" >
            <TextView android:id="@+id/txtLeyendaMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#0F0F0F"
                android:text="Se ha enviado un correo a "/>
        </TableRow>

        <TableRow
            android:id="@+id/rowNumeroConfirmacion"
            android:layout_width="fill_parent"
            android:paddingBottom="5dp"
            android:gravity="center_vertical|center_horizontal" >
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="72dp">
                <EditText android:id="@+id/editNumeroConfirmacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:hint="@string/numero_confirmacion"/>
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow  android:layout_width="fill_parent"
            android:paddingBottom="5dp"
            android:gravity="center_vertical|center_horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:id="@+id/btnReintentar"
                android:layout_height="35dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="3dp"
                android:padding="3dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/boton_celeste"
                android:layout_marginRight="5dp"
                android:text="Reintentar"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:id="@+id/btnValidarCuenta"
                android:layout_height="35dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:padding="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/boton_celeste"
                android:text="Finalizar"/>
        </TableRow>

    </TableLayout>

</LinearLayout>