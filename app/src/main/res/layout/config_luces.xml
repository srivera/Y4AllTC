<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <View android:id="@+id/rectangle_at_the_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/gradient"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/fabSalir"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/salir"
                android:background="@android:color/transparent"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/txtNombreEquipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instalar Luces"
                android:textAllCaps="true"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center_horizontal"
            android:id="@+id/layoutConfigurar"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp">

            <TextView
                android:text="Presione el botón AGREGAR dentro de los 3 primeros segundos que la luz esté encendida. La luz parpadeará 3 veces cuando el foco haya sido agregado."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:id="@+id/txtLink"
                android:textSize="14dp"
                android:layout_marginBottom="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editSeriesFocos"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="AGREGAR"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:background="@drawable/boton_celeste"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right"
                android:id="@+id/link" />
            <TextView
                android:text="Presione el botón ELIMINAR dentro de los 3 primeros segundos que la luz esté encendida. La luz parpadeará 5 veces cuando el foco haya sido eliminado."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:id="@+id/txtEliminar"
                android:textSize="14dp"
                android:layout_marginBottom="10dp" />
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="ELIMINAR"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:background="@drawable/boton_celeste"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right"
                android:id="@+id/unlink" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
