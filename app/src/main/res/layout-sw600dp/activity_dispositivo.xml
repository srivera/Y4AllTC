<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/TableLayoutPrincipal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="fill_parent"
            android:padding="0dip" >

            <EditText
                android:id="@+id/editMensajeChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_margin="5dp"
                android:ems="30" >
            </EditText>

            <Button
                android:id="@+id/btnEnviarMensaje"
                android:layout_width="30dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:background="#2D3E50"
                android:text="@string/icon_responder_mensaje"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </TableRow>
 </TableLayout>
 
    <TableLayout
        android:id="@+id/TableLayoutPrincipal3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TableRow
            android:layout_width="fill_parent"
            android:layout_margin="2dip" >

            <TextView
                android:id="@+id/textDispositivoIcono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_usuario"
                android:textColor="#19BD9B"
                android:paddingRight="3dip" 
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="..." />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_margin="2dip" >

            <TextView
                android:id="@+id/textMensajeIcono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="@string/icon_mensaje_sobre"
                android:textColor="#19BD9B"
                android:paddingRight="3dip" 
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textUltimoMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="..." />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/TableLayoutPrincipal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="fill_parent"
            android:padding="0dip" >

            <Button
                android:id="@+id/btnEscucharAuto"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:layout_weight="0.166"
                android:background="@drawable/image_rounded_corner_turq"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/icon_escuchar_auto"
                android:textColor="#13977D"
                android:layout_marginRight="5dp"
                android:textSize="22dp" />

			<Button
                android:id="@+id/btnContestarAutomatico"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:layout_weight="0.166"
                android:background="@drawable/image_rounded_corner_sun"
                android:text="@string/icon_replay"
                android:textColor="#93780D"
                android:layout_marginRight="5dp"
                android:textSize="22dp" />            
            
            <Button
                android:id="@+id/btnAnterior"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:layout_weight="0.166"
                android:background="@drawable/image_rounded_corner_pome"
                android:text="@string/icon_retroceder"
                android:textColor="#000000"
                android:layout_marginRight="5dp"
                android:textSize="22dp" />

            <Button
                android:id="@+id/btnEscucharActual"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:layout_weight="0.166"
                android:background="@drawable/image_rounded_corner_beliz"
                android:text="@string/icon_escuchar_actual"
                android:textColor="#000000"
                android:layout_marginRight="5dp"
                android:textSize="22dp" />

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:layout_weight="0.166"
                android:background="@drawable/image_rounded_corner_silv"
                android:text="@string/icon_siguiente"
                android:textColor="#000000"
                android:textSize="22dp" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="#00000000"
        android:layout_margin="5dp" />

</LinearLayout>