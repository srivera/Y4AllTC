<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="0.08">

        <View android:id="@+id/rectangle_at_the_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/fabSalir"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/salir"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIGURACION"
            android:textAllCaps="true"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="0.92">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dip"
            android:scrollbars="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:shrinkColumns="1"
            android:stretchColumns="1" >

            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:visibility="gone"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/tituloFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:ellipsize="marquee"
                    android:text="Foto de Perfil"
                    android:layout_span="2"
                    android:fadingEdge="horizontal" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:visibility="gone"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#50000000"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:visibility="gone"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:paddingBottom="24dp"
                    android:layout_span="2">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:id="@+id/fotoPerfilDispositivo"
                        android:src="@drawable/usuario"
                        android:layout_alignParentTop="true" />

                    <ImageButton
                        android:id="@+id/btnProfileDispositivo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/camara"
                        android:background="@drawable/frame"
                        android:layout_marginRight="58dp"
                        android:layout_marginEnd="58dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/tituloIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:ellipsize="marquee"
                    android:text="Acceso a la Casa"
                    android:layout_span="2"
                    android:fadingEdge="horizontal" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#50000000"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/txtMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mensaje que se reproduce cuando un visitante timbra"
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_span="2"
                    android:maxLines="4" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/editMensajeTimbrar"
                    android:background="@drawable/text_rounded"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:hint="Mensaje al timbrar"
                    android:layout_span="2"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/txtAbrirPuerta"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:text="Si tiene conectada una cerradura a Wii Bell debe activarle esta opción y colocar una clave de 4 dígitos para abrir la puerta."
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:maxLines="4" />
                <LinearLayout android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">
                    <ToggleButton
                        android:id="@+id/toggleApertura"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/toggle_selector"
                        android:layout_marginBottom="5dp"
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />

                    <EditText
                        android:id="@+id/editClavePuerta"
                        android:hint="Clave"
                        android:paddingLeft="10dp"
                        android:textSize="14dp"
                        android:background="@drawable/text_rounded"
                        android:layout_width="match_parent"
                        android:paddingBottom="5dp"
                        android:inputType="numberDecimal"
                        android:digits="0123456789"
                        android:maxLength="4"
                        android:layout_height="35dp"/>

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:paddingBottom="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/editMensajePuerta"
                    android:hint="Mensaje a sus visitantes cuando les abra la puerta"
                    android:background="@drawable/text_rounded"
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/txtSensorPuerta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Si tiene instalado el sensor de apertura de puerta debe activarlo aquí y escriba un mensaje que se reproducirá cada vez que se abra la puerta."
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_span="2"
                    android:maxLines="4" />

                <ToggleButton
                    android:id="@+id/toggleSensor"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:paddingBottom="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/editMensajeApertura"
                    android:hint="Mensaje del sensor de la puerta"
                    android:background="@drawable/text_rounded"
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/txtPorton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Para utilizar timbre eléctrico ACTIVE, para portón eléctrico DESACTIVE"
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_span="2"
                    android:maxLines="4" />

                <ToggleButton
                    android:id="@+id/togglePorton"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </TableRow>
            <TableRow android:id="@+id/rowPorton"
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/tituloPorton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:ellipsize="marquee"
                    android:text="Portón Eléctrico"
                    android:layout_span="2"
                    android:fadingEdge="horizontal" />

            </TableRow>
            <TableRow android:id="@+id/rowPorton1"
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#50000000"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow android:id="@+id/rowPorton2"
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/txtTiempoActivacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:text="Tiempo de activación de la puerta en segundos"
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_span="2"
                    android:maxLines="4" />
                <Spinner
                    android:id="@+id/spinnerTiempoPorton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"/>
            </TableRow>

            <TableRow android:id="@+id/rowSonido"
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/tituloTimbre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:ellipsize="marquee"
                    android:text="Opciones del Sonido"
                    android:layout_span="2"
                    android:fadingEdge="horizontal" />

            </TableRow>
            <TableRow android:id="@+id/rowSonido2"
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#50000000"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <TextView android:id="@+id/txtTipoVoz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccione la voz para sus mensajes de texto. Presione click en el botón PLAY para escuchar la voz."
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_span="2"
                    android:maxLines="4" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:paddingBottom="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/txtTipoVozSeleccionada"
                    android:textColor="#80000000"
                    android:width="0dp"
                    android:layout_weight="0.85"
                    android:textSize="16dp"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Voz" />
                <ImageButton
                    android:id="@+id/btnPlay"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.15"
                    android:background="@drawable/ab_transparent_lightcontroller"
                    android:tint="@color/colorprincipal"
                    android:clickable="true"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:visibility="gone"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/txtCambiarTono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Si desea cambiar el tono de timbre cuando un visitante llega."
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_span="2"
                    android:maxLines="4" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:paddingBottom="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="5dp"
                android:visibility="gone"
                android:layout_marginBottom="5dp">
                <TextView
                    android:textColor="#80000000"
                    android:width="0dp"
                    android:layout_weight="0.91"
                    android:textSize="16dp"
                    android:layout_height="wrap_content"
                    android:text="Cambiar tono timbre" />

                <ToggleButton
                    android:id="@+id/toggleTono"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="0.09"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </TableRow>


            <TableRow android:id="@+id/rowSonido3"
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/txtTimbreExterno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Si tiene un timbre eléctrico conectado a Wii Bell debe activarlo aquí."
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_span="2"
                    android:maxLines="4" />
                <ToggleButton
                    android:id="@+id/toggleTimbreExterno"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </TableRow>

            <TableRow android:id="@+id/rowSonido4"
                android:layout_width="fill_parent"
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp">
                <TextView android:id="@+id/txtVecesTimbre"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="16dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:text="Indique cuantas veces quiere que se active el timbre" />

                <RadioGroup
                    android:id="@+id/opciones_timbre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_uno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="1" />

                    <RadioButton
                        android:id="@+id/radio_dos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="2" />
                </RadioGroup>
            </TableRow>
            <TableRow android:id="@+id/rowSonido5"
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/txtVolumenMensajes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Si desea cambiar el volumen de los mensajes de Wii Bell, puede configurarlo aquí."
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_span="2"
                    android:maxLines="4" />
            </TableRow>

            <TableRow android:id="@+id/rowSonido6"
                android:layout_width="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp">

                <RadioGroup
                    android:id="@+id/opciones_volumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_alto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:buttonTint="#1C94AB"
                        android:text="Alto" />

                    <RadioButton
                        android:id="@+id/radio_medio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:buttonTint="#1C94AB"
                        android:text="Medio" />
                </RadioGroup>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <TextView android:id="@+id/tituloOtras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:ellipsize="marquee"
                    android:text="Otras Configuraciones"
                    android:layout_span="2"
                    android:fadingEdge="horizontal" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#50000000"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <TextView android:id="@+id/txtConexionDirecta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Si desea un acceso más rápido debe configurar en su router que su Wii Bell tenga un IP fijo y además abrir los puertos 9990 al 9999 direccionándole a la IP de Wii Bell."
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_span="2"
                    android:maxLines="4" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="10dp"
                >

                <TextView android:id="@+id/txtWifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Si desea utilizar con cable de red debe deshabilitar la red wifi, debe estar seguro que el cable de red este conectado."
                    android:layout_below="@android:id/title"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_span="2"
                    android:maxLines="4" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:paddingBottom="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="5dp"
                android:visibility="gone"
                android:layout_marginBottom="5dp">
                <TextView
                    android:textColor="#80000000"
                    android:width="0dp"
                    android:layout_weight="0.91"
                    android:textSize="16dp"
                    android:layout_height="wrap_content"
                    android:text="Wifi activa" />

                <ToggleButton
                    android:id="@+id/toggleWifi"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="0.09"
                    android:background="@drawable/toggle_selector"
                    android:layout_marginRight="10dp"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:paddingBottom="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone">
                <TextView
                    android:textColor="#80000000"
                    android:width="0dp"
                    android:layout_weight="0.91"
                    android:textSize="16dp"
                    android:layout_height="wrap_content"
                    android:text="Conexión directa" />

                <ToggleButton
                    android:id="@+id/togglePuertos"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="0.09"
                    android:background="@drawable/toggle_selector"
                    android:layout_marginRight="10dp"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:gravity="center_vertical|left"
                android:visibility="gone"
                android:layout_marginBottom="10dp">

                <TextView android:id="@+id/txtModo"
                    android:layout_width="wrap_content"
