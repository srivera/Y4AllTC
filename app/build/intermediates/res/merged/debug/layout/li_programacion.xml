<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#333333"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#333333"
        android:id="@+id/layoutLucesPrincipal"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#333333"
            android:id="@+id/lucesLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtHora"
                    android:textSize="24dp"
                    android:layout_width="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:layout_gravity="center_horizontal|top"
                    android:gravity="top|center_horizontal"/>

                <TextView
                    android:id="@+id/txtDuracion"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Z"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|center_horizontal"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.55"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtNombre"
                    android:textSize="18dp"
                    android:textColor="#1C94AB"
                    android:layout_width="wrap_content"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE PROGRAMACION"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtDomingo"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text=" D "/>
                    <TextView
                        android:id="@+id/txtLunes"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text=" L "/>
                    <TextView
                        android:id="@+id/txtMartes"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text=" M "/>
                    <TextView
                        android:id="@+id/txtMiercoles"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text=" M "/>
                    <TextView
                        android:id="@+id/txtJueves"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text=" J "/>
                    <TextView
                        android:id="@+id/txtViernes"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text=" V "/>
                    <TextView
                        android:id="@+id/txtSabado"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text=" S "/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/btnEliminarProgramacion"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete"
                    style="@style/MenuButtonsSmallProg"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>