<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="${packageName}.${activityClass}" >



    <TextView
        android:id="@+id/textoPaqEnviado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textoPaqRecibido"
        android:text="2"
        android:visibility="gone"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textoPaqRecibido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textoPaqEnviado"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="57dp"
        android:text="2"
        android:visibility="gone"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagenPublicidad"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:layout_weight="0.85"
        android:paddingTop="10dp"
        android:text="CESAR"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCerrarIntercom"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_below="@+id/txtNombre"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_ayuda"
        android:padding="2dp"
        android:text="Cerrar"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagenPublicidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nodisponible" />

</RelativeLayout>