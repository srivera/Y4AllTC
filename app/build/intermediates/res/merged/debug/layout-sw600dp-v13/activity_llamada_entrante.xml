<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="#ffffff" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgFotoVisitanteTim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/nodisponible" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp" >

        <Button
            android:id="@+id/btnResponderTimbrada"
            android:layout_width="122dp"
            android:layout_height="50dp"
            android:background="@drawable/button_answer"
            android:text="@string/responder" />

        <Button
            android:id="@+id/btnRechazarTimbrada"
            android:layout_width="122dp"
            android:layout_height="50dp"
            android:background="@drawable/button_decline"
            android:paddingLeft="10dp"
            android:text="@string/rechazar" />
    </LinearLayout>

</LinearLayout>