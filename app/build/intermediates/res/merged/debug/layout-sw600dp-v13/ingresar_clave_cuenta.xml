<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="#F5F5F5"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layoutClave"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        android:layout_gravity="center_vertical|center_horizontal"
         android:orientation="vertical">
        <TextView
            android:id="@+id/txtTituloPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.37"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal|bottom"
            android:textColor="#000000"
            android:text="Ingrese su clave"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center_horizontal|top"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="#000000"
            android:background="@drawable/text_rounded"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:inputType="numberPassword|number"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:paddingTop="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnUno"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:background="@drawable/button_clave"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnDos"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:background="@drawable/button_clave"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnTres"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:background="@drawable/button_clave"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnCuatro"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:background="@drawable/button_clave"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnCinco"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:background="@drawable/button_clave"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnSeis"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:background="@drawable/button_clave"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnSiete"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:background="@drawable/button_clave"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnOcho"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:background="@drawable/button_clave"
                    android:textColor="#000000"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/btnNueve"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:background="@drawable/button_clave"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnBorrar"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="DEL"
                    android:background="@drawable/button_clave_rojo"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/btnCero"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:background="@drawable/button_clave"
                    android:textColor="#000000"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_clave_verde"
                    android:textColor="#ffffff"
                    android:text="OK"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>