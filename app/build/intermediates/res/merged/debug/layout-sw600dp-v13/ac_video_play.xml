<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:background="#ECEFF1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top"
            android:layout_weight="0.7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000">
                <ImageButton
                    android:id="@+id/fabSalir"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/salir"
                    android:tint="#ffffff"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:id="@+id/layoutTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/txtNombrePortero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DETALLE DE LA VISITA"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="true"
                        android:textSize="18dp"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:layout_marginTop="10dp"
                        android:background="#000000"/>

                    <TextView
                        android:id="@+id/txtFechaHora"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:text="Fecha"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="center"
                    android:id="@+id/videoView"
                    android:transitionName="@string/transition_album_cover"
                    android:layout_alignParentBottom="true" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:transitionName="@string/transition_album_cover"
                    android:layout_centerInParent="true"
                    android:id="@+id/fotoView"
                    android:layout_gravity="top" />

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/linearLayoutInferior"
            android:background="#000000"
            android:layout_weight="0.1">
            <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="0.7"-->
                <!--android:gravity="center_vertical"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:orientation="vertical">-->
                <!--<TextView-->
                    <!--android:id="@+id/txtNombrePorteroInferior"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:textSize="35dp"-->
                    <!--android:text="Nombre"-->
                    <!--android:textColor="#ffffff"-->
                    <!--android:layout_height="wrap_content"/>-->

                <!--<TextView-->
                    <!--android:id="@+id/txtFechaHoraInferior"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:textSize="20dp"-->
                    <!--android:text="Fecha"-->
                    <!--android:textColor="#ffffff"-->
                    <!--android:layout_height="wrap_content"/>-->
            <!--</LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:paddingBottom="10dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_alignParentBottom="true"
                android:paddingTop="10dp">
                <ImageView
                    android:id="@+id/favorito"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:tint="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:src="@drawable/star"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:tint="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnCompartir"
                    android:src="@drawable/share"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:tint="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnEliminar"
                    android:src="@drawable/delete"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>