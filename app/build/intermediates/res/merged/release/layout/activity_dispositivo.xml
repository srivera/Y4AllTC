<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="top"
    android:background="#FFFFFF"
    android:gravity="top">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="0dp"
        android:layout_weight="0.10">

        <View android:id="@+id/rectangle_at_the_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/fabSalir"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/salir"
            android:background="@android:color/transparent"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/txtNombreEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIS TELEFONOS"
            android:textAllCaps="true"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TableLayout
        android:id="@+id/TableLayoutPrincipal1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10" >

        <TableRow
            android:layout_width="fill_parent"
            android:padding="0dip" >

            <EditText
                android:id="@+id/editMensajeChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_margin="5dp"
                android:hint="Escriba un mensaje"
                android:ems="15" >
            </EditText>

            <Button
                android:id="@+id/btnEnviarMensaje"
                android:layout_width="30dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:background="#2D3E50"
                android:text="Enviar"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/TableLayoutPrincipal3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10" >
        <TableRow
            android:layout_width="fill_parent"
            android:layout_margin="4dip" >

            <TextView
                android:id="@+id/textDispositivoIcono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="usuario"
                android:textColor="#19BD9B"
                android:paddingRight="3dip"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="..." />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_margin="4dip" >

            <TextView
                android:id="@+id/textMensajeIcono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mensaje"
                android:textColor="#19BD9B"
                android:paddingRight="3dip"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textUltimoMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="..." />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/TableLayoutPrincipal2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10" >

        <TableRow
            android:layout_width="fill_parent"
            android:padding="0dip" >

            <Button
                android:id="@+id/btnEscucharAuto"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:layout_weight="0.166"
                android:background="@drawable/image_rounded_corner_turq"
                android:gravity="center_vertical|center_horizontal"
                android:text="escuchar"
                android:textColor="#13977D"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnContestarAutomatico"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:layout_weight="0.166"
                android:background="@drawable/image_rounded_corner_sun"
                android:text="contestar"
                android:textColor="#93780D"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnAnterior"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:layout_weight="0.166"
                android:background="@drawable/image_rounded_corner_pome"
                android:text="anterior"
                android:textColor="#000000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnEscucharActual"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:layout_weight="0.166"
                android:background="@drawable/image_rounded_corner_river"
                android:text="actual"
                android:textColor="#000000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button_pequeno"
                android:layout_weight="0.166"
                android:background="@drawable/image_rounded_corner_silv"
                android:text="siguiente"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:listSelector="#00000000" />

</LinearLayout>