<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="background_color">#FF1a1a1a</color>
    <color name="colorPrimary">#FFef6c00</color>
    <color name="white">#ffffffff</color>
    <dimen name="fab_size_normal">30dp</dimen>
    <dimen name="size_button_lista">40dp</dimen>
    <dimen name="size_button_pequeno">30dp</dimen>
    <style name="ActionBar.Solid.Lightcontroller" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_lightcontroller</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_lightcontroller</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_lightcontroller</item>
        <item name="progressBarStyle">@style/ProgressBar.Lightcontroller</item>
    </style>
    <style name="ActionBar.Transparent.Lightcontroller" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_lightcontroller</item>
        <item name="progressBarStyle">@style/ProgressBar.Lightcontroller</item>
    </style>
    <style name="ActionBarTabStyle.Lightcontroller" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_lightcontroller</item>
    </style>
    <style name="ActionButton.CloseMode.Lightcontroller" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_lightcontroller</item>
    </style>
    <style name="ButtonLightController" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/lightcontroller_btn_default_holo_dark</item>
    </style>
    <style name="DropDownListView.Lightcontroller" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_lightcontroller</item>
    </style>
    <style name="DropDownNav.Lightcontroller" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_lightcontroller</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_lightcontroller</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_lightcontroller</item>
    </style>
    <style name="ImageButtonLightController" parent="android:Widget.Holo.ImageButton">
        <item name="android:background">@drawable/lightcontroller_btn_default_holo_dark</item>
    </style>
    <style name="LightController" parent="LightController.Base"/>
    <style name="LightController.Base" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor" ns1:targetApi="lollipop">#ff383838</item>
        <item name="android:windowDrawsSystemBarBackgrounds" ns1:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" ns1:targetApi="lollipop">@android:color/transparent</item>
    </style>
    <style name="PopupMenu.Lightcontroller" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_lightcontroller</item>	
    </style>
    <style name="ProgressBar.Lightcontroller" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_lightcontroller</item>
    </style>
    <style name="SeekBarLightController" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">@drawable/lightcontroller_scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/lightcontroller_scrubber_progress_horizontal_holo_dark</item>
        <item name="android:thumb">@drawable/lightcontroller_scrubber_control_selector_holo_dark</item>
    </style>
    <style name="SpinnerLightController" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@drawable/lightcontroller_spinner_background_holo_dark</item>
        <item name="android:dropDownSelector">@drawable/lightcontroller_list_selector_holo_dark</item>
    </style>
    <style name="Theme.Lightcontroller" parent="@style/Theme.AppCompat">
        <item name="actionBarItemBackground">@drawable/selectable_background_lightcontroller</item>
        <item name="popupMenuStyle">@style/PopupMenu.Lightcontroller</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Lightcontroller</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Lightcontroller</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Lightcontroller</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Lightcontroller</item>
        <item name="actionModeBackground">@drawable/cab_background_top_lightcontroller</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_lightcontroller</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Lightcontroller</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>
    <style name="Theme.Lightcontroller.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Lightcontroller</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Lightcontroller</item>
    </style>
    <style name="ToggleLightController" parent="android:Widget.Holo.Button.Toggle">
        <item name="android:background">@drawable/lightcontroller_btn_toggle_holo_dark</item>
    </style>
</resources>