<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    app:orientation="vertical"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:background="#000000"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="0.08">
            <View android:id="@+id/rectangle_at_the_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@drawable/gradient"
                android:visibility="visible" />
            <ImageButton
                android:id="@+id/fabSalir"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/salir"
                android:background="@android:color/transparent"
                android:layout_marginLeft="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIGURAR ZONA"
                android:textAllCaps="true"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.92"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal">
                    <EditText
                        android:id="@+id/editNombreZona"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/text_rounded"
                        android:layout_marginRight="8dp"
                        android:hint="nombre de la zona"
                        android:textColor="#000000"/>
                    <Button
                        android:id="@+id/btnActualizar"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:text="Actualizar"
                        android:layout_height="match_parent"
                        android:background="#1C94AB"
                        android:textColor="#FEFE03"/>
                </LinearLayout>
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:visibility="gone"
                    android:text="Para un correcto funcionamiento de los focos ingresar los números y activarlos"
                    android:textColor="#ffffff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:gravity="center_horizontal">
                    <EditText
                        android:id="@+id/editSerieFocos"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/text_rounded"
                        android:layout_marginRight="8dp"
                        android:hint="número de serie del foco"
                        android:textColor="#000000"/>
                    <Button
                        android:id="@+id/btnActivar"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:text="Activar"
                        android:layout_height="match_parent"
                        android:background="#1C94AB"
                        android:textColor="#FEFE03"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="16dp"
                        android:text="Para añadir o retirar focos de esta sección utilice la opción correspondiente"
                        android:textColor="#ffffff"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal">
                        <Button
                            android:id="@+id/btnAgregar"
                            android:layout_width="match_parent"
                            android:layout_weight="0.5"
                            android:text="Añadir foco"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:background="#1C94AB"
                            android:layout_marginBottom="10dp"
                            android:textColor="#FEFE03"/>
                        <Button
                            android:id="@+id/btnEliminar"
                            android:layout_width="match_parent"
                            android:layout_weight="0.5"
                            android:text="Retirar foco"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:background="#1C94AB"
                            android:textColor="#FEFE03"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_horizontal|center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:text="PROGRAMACION"
                        android:gravity="center_horizontal"
                        android:textSize="18dp"
                        android:textColor="#1C94AB"
                        android:id="@+id/txtListaProgramacion"/>
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btnNuevaProgramacion"
                        android:layout_width="0dp"
                        android:layout_weight="0.15"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add"
                        style="@style/MenuButtonsSmallProg"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/listProgramacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>