<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/imgDispositivo"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:src="@drawable/usuarios"
        android:layout_weight="0.15"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:paddingLeft="25dp"
        android:layout_weight="0.65"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nombreDispositivo"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:text="Nombre"
            android:paddingBottom="3dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tipoDispositivo"
            android:textSize="14sp"
            android:text="Tipo"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/swipelist_frontview"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/btnbuscar"
            android:layout_width="42dp"
            android:layout_height="@dimen/size_button_lista"
            android:textColor="#19BD9B"
            android:textSize="24dp"
            android:background="@android:color/transparent"
            android:text="@string/icon_buscar" />

        <Button
            android:id="@+id/btnlocalizar"
            android:layout_width="42dp"
            android:layout_height="@dimen/size_button_lista"
            android:textColor="#E74C3C"
            android:textSize="24dp"
            android:background="@android:color/transparent"
            android:text="@string/icon_localizar" />
    </LinearLayout>

</LinearLayout>